{
  "$schema": "./.sitecore/schemas/RootConfigurationFile.schema.json",
  "modules": [
    "src/*.module.json",
    "src/serialization/Foundation/*/*.module.json",
    "src/serialization/Feature/*/*.module.json",
    "src/serialization/Project/*/*.module.json",
    "//comment - Only uncomment npm packages when using for local push otherwise build pipelines will fail",
    "//npm:@constellation4sitecore/foundation-labels@1.0.0",
    "//npm:@constellation4sitecore/feature-navigation@1.0.0",
    "//npm:@constellation4sitecore/feature-url-friendly-page-names@1.0.0"
  ],
  "plugins": [
    "Sitecore.DevEx.Extensibility.Serialization@5.2.113",
    "Sitecore.DevEx.Extensibility.Publishing@5.2.113",
    "Sitecore.DevEx.Extensibility.Indexing@5.2.113",
    "Sitecore.DevEx.Extensibility.ResourcePackage@5.2.113",
    "Sitecore.DevEx.Extensibility.XMCloud@1.1.30",
    "Sitecore.DevEx.Extensibility.Database@5.2.113"
  ],
  "serialization": {
    "defaultMaxRelativeItemPathLength": 100,
    "defaultModuleRelativeSerializationPath": "items",
    "removeOrphansForRoles": true,
    "removeOrphansForUsers": true,
    "continueOnItemFailure": false,
    "excludedFields": []
  },
  "settings": {
    "telemetryEnabled": false,
    "cacheAuthenticationToken": true,
    "versionComparisonEnabled": true,
    "apiClientTimeoutInMinutes": 5
  }
}